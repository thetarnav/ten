{
	"version": "2.0.0",
	"tasks": [
        {
            "label":   "Test",
            "type":    "shell",
            "command": "npm",
            "args":    ["test"],
            "group":   "test",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
            },
        },
        {
            "label":   "Run",
            "type":    "shell",
            "command": "./run.ts",
            "args":    ["-i", "${input:expression}"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
            },
        },
    ],
    "inputs": [
        {
            "id": "expression",
            "type": "promptString",
            "description": "Enter expression to evaluate",
            "default": "true | false"
        }
    ]
}
